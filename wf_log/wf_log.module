/**
 * Checks if a bundle exists.
 *
 * @param string $name
 *   The bundle to look up.
 *
 * @return bool
 *   Does the bundle exist?
 */
function wf_log_bundle_exists($name) {
  $bundles = wf_log_load_bundles();
  return isset($bundles[$name]);
}

