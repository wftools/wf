}

/**
 * List of Log Bundles.
 */
function wf_log_load_bundles($log_name = NULL) {
  $logs = entity_load_multiple_by_name('wf_log_bundle', isset($log_name) ? array($log_name) : FALSE);
  return isset($log_name) ? reset($logs) : $logs;
}

